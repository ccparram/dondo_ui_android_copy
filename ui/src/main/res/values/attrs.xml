<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="is_required" format="boolean" />
    <attr name="title" format="string" />

    <declare-styleable name="ButtonView">
        <attr name="state" format="enum">
            <enum name="primary_enable" value="0" />
            <enum name="primary_disable" value="1" />
            <enum name="secondary_enable" value="2" />
            <enum name="secondary_disable" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MediaSliderView">
        <attr name="double_tap_zoom_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="EditTextField">
        <attr name="android:enabled" />
        <attr name="android:clickable" />
        <attr name="android:focusable" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="is_required" />
        <attr name="title" />
        <attr name="placeholder" format="string" />
        <attr name="minLength" format="integer" />
        <attr name="maxLength" format="integer" />
        <attr name="minLines" format="integer" />
        <attr name="maxLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="QuantityPicker">
        <attr name="quantityPickerNextFocusDown" format="reference" />
    </declare-styleable>
</resources>
